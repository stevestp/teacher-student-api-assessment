{
  "name": "teacher-student-api",
  "version": "1.0.0",
  "description": "A RESTful API for teacher-student administrative functions",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --verbose --maxWorkers=1",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false --maxWorkers=1",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "db:setup": "mysql -u root -p < database/schema.sql",
    "db:setup-railway": "node setup-db.js",
    "build": "echo 'No build step required'",
    "db:reset": "npm run db:setup"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "api",
    "teacher",
    "student",
    "education"
  ],
  "author": "Do Hoang Linh",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}